<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Action_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_4dp</item>
        <item name="android:paddingStart">@dimen/normal_size</item>
        <item name="android:paddingTop">@dimen/small_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Detail_Views_Style">
        <item name="android:paddingStart">@dimen/normal_size</item>
        <item name="android:paddingEnd">@dimen/normal_size</item>
        <item name="android:layout_marginTop">@dimen/normal_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="chipMinHeight">24dp</item>
    </style>

    <style name="Home_Button_Style">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:drawableStart">@drawable/ic_add_post</item>
        <item name="android:text">@string/add_item_home</item>
    </style>

</resources>